{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "outDir": "lib"
  },
  "include": [
    "./src",
  ]
}